script/source = "extends Node2D


var balls = []
var scores = []
var speeds = []

export var default_abberation = 0.005
export var distorted_abberation = 0.025

onready var shader = get_node(\"shader\").get_material()
onready var timer = get_node(\"Timer\")


func _ready():
	# Init balls, scores and speeds arrays
	var count = 1
	while true:
		var ball = get_node(\"ball\" + str(count))
		
		if ball == null:
			break
		
		balls.append(ball)
		scores.append(0)
		speeds.append(0)
		
		count += 1
	
	# Connect balls
	for ball in balls:
		ball.connect(\"body_enter\", self, \"_on_collision\")
	
	# Connect timer
	timer.connect(\"timeout\", self, \"_on_timeout\")
	
	# Reset abberation
	reset_abberation()
	
	# Start process
	set_process(true)

func _process(delta):
	var count = 1
	while count <= balls.size():
		var ball = balls[count - 1]
		var speed = ball.get_linear_velocity().length()
		
		scores[count - 1] += speed * delta
		speeds[count - 1] = speed
		
		count += 1

func _on_collision(object):
	distort_abberation()

func _on_timeout():
	reset_abberation()

func reset_abberation():
	\"\"\" Set abberation to its default value \"\"\"
	set_abberation(default_abberation)

func set_abberation(value):
	\"\"\" Set chromatic abberation magnitude \"\"\"
	shader.set_shader_param(\"rOffset\", Vector2(value, 0))
	shader.set_shader_param(\"bOffset\", Vector2(-value, 0))

func distort_abberation():
	\"\"\" Offsets the abberation by distorted_abberation and sets timer to reset it \"\"\"
	set_abberation(distorted_abberation)
	timer.start()

func get_scores():
	\"\"\" Returns an array of scores \"\"\"
	return scores

func get_speeds():
	\"\"\" Returns an array of speeds \"\"\"
	return speeds
"

